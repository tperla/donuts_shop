<Window x:Class="PL.trakingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
           DataContext="{Binding RelativeSource={RelativeSource self}}"
        Title="trakingWindow" WindowStartupLocation="CenterScreen" Height="450" Width="400">

    <Grid Margin="0,0,10,-6">
        <Button x:Name="Ok" Content="traking" HorizontalAlignment="Left" Margin="76,220,0,0" VerticalAlignment="Top" Click="Ok_Click" Height="177" Width="210"/>
        <Label Content="Enter Id of  your order:" HorizontalAlignment="Center" Margin="0,69,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="25" FontFamily="Bauhaus 93" Width="286" Foreground="#FFDA6290"/>

        <TextBox x:Name="IdOrdertxt" Text="{Binding idText,Mode=TwoWay}" HorizontalAlignment="Left" Margin="76,145,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="210" Height="27" FontSize="20" FontFamily="Showcard Gothic"/>
    </Grid>
</Window>
